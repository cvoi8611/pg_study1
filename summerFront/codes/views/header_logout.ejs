        .menu_rest{
            cursor : pointer;
            width:60px;
            height:240px;
        }
        
        input[id="sidebar"] {
            display : none;
        }
        input[id="sidebar"] + label {
            display : block;
            width : 50px ;
            height : 40px ;
            position : relative ;
            cursor : pointer;
        }
        input[id="sidebar"] + label span {
            display : block;
            position : absolute ;
            width : 100%;
            height : 5px;
            border-radius : 30px;
            background-color: #000;
            transition : all .35s;
        }
        input[id="sidebar"] + label span:nth-child(1) {
            top : 0;
        }
        input[id="sidebar"] + label span:nth-child(2) {
            top : 50%;
            transform:translateY(-50%);
        }
        input[id="sidebar"] + label span:nth-child(3) {
            bottom : 0;
        }
        
        .right_sidebar{
            display : flex;
            width : 300px;
            height : 100%;
            background : #222;
            position : absolute;
            top : 0;
            right : -300px;
            z-index : 3;
            transition:all .35s;
        }
        
        input[id="sidebar"]:checked + label + div {
            right : 0;
        }
        input[id="sidebar"]:checked + label {
            z-index: 4;
        }
        input[id="sidebar"]:checked + label span {
            background: #fff;
        }
        
        .sidebar_item{
            display : flex;
            flex-direction: column;
            margin-top : 100px;
            color : #fff;
            font-size: 40px;
        }
        .sidebar_item input {
            cursor : pointer;
            border-top : 3px solid white;
            font-size : 20px;
            height : 100px;
            width : 300px;
            background-color: black;
            color : white;
        }
        
        .toolbar {
            cursor : pointer;
            z-index : 1;
            display : flex;
            flex-direction: column-reverse;;
            border-top : 3px solid white;
            border-bottom : 3px solid white;
            flex-wrap: wrap;
            width : 100%;
            height : 10%;
        }
        
        .toolbar li {
            float: left;
            list-style: none;
        }
        
        .toolbar a {
            color: #fff;
            text-decoration: none;
            font-size:20px;
        }
        
        .menu_line {
            margin : 0;
            padding : 0;
            width: 100%;
            overflow: hidden;
        }
        
        .menu_line > li {
            width: 20%;
            float: left;
            text-align: center;
            line-height: 80px;
            background-color: #121212;
        }
        
        .menu_item > li {
            position: relative;
            border-bottom: 2px inset white;
            float : none;
            line-height: 80px;
            background-color: #2E2E2E;
        }
        
        .menu_item {
            position: relative;
            z-index : 2;
            padding: 0;
            height: 0;
            overflow: hidden;
        }
        .menu_line > li:hover {
            background-color: #252525;
            transition-duration: 0.5s;
        }
        
        .menu_line > li:hover .menu_item {
            position: absolute;
            width : 20%;
            height: 250px;
            transition-duration: 1s;
        }
        










